<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ideas</title>
  </head>
  <body class="body-index">
    <div class="ideas_container">
      <div class="global_header">
        <h1>Webstorm <%= @webstorm[:webstorm][:webstorm]%></h1>
        <h3>Número de ideas: <%= @ideas.size %></h3>
        <h3>Número de miembros: <%= @member_count %></h3>
        <hr>
        <h1>Ideas</h1>
      </div>

      <div class="ideas_list">
        <% @contador = 0 %>
        <% @ideas.each do | i |%>
          <div class="idea-titulo" id="<%=@contador%>">
            <h5><%= i[:titulo] %></h5>
          </div>
          <% @contador = @contador + 1 %>
        <% end %>
        <% @contador2 = 0 %>
        <% @ideas.each do | i |%>
          <div class="idea_div" id="idea_div_<%=@contador2%>">
            <%= link_to "Persona", user_show_path(:id => i[:autor_id], :token => params["token"], :empresa => params["empresa"]) %>
            <table class="idea">
              <tr class="iname">
                <th class="th1">Autor</th>
                <th> <%= i[:autor] %></th>
              </tr>
              <tr>
                <th class="th1">Email</th>
                <th> <%= i[:autor_email] %></th>
              </tr>
              <tr>
                <th class="th1">Título</th>
                <th><%= i[:titulo] %></th>
              </tr>
              <tr>
                <th class="th1">ID</th>
                <th><%= i[:id] %></th>
              </tr>
              <tr>
                <th class="th1">Descripción</th>
                <th> <%= i[:descripcion] %></th>
              </tr>
              <tr>
                <th class="th1">Puntaje</th>
                <th> <%= i[:puntaje] %></th>
              </tr>
              <tr>
                <th class="th1">Puntaje actual</th>
                <th><%= i[:puntaje_actual] %></th>
              </tr>
              <tr>
                <th class="th1">Votos</th>
                <th><%= i[:cantidad_votos] %></th>
              </tr>
              <tr>
                <th class="th1">Categoría</th>
                <th> <%= i[:categoria] %></th>
              </tr>

            </table>
          </div>
          <% @contador2 = @contador2 + 1 %>
        <% end %>
      </div>
    </div>
  </body>
</html>
